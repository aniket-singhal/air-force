{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}
